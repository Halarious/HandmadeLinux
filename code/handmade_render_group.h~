
typedef struct
{
  v3 P;
} render_basis;

typedef struct
{
  render_basis *Basis;
  loaded_bitmap *Bitmap;
  v2 Offset;
  r32 OffsetZ;
  r32 EntityZC;

  r32 R, G, B, A;
  v2 Dim;
} entity_visible_piece;

typedef struct
{
  render_basis *DefaultBasis;
  state *State;
  u32 Count;
  entity_visible_piece Pieces[4096];
} entity_visible_piece_group;

