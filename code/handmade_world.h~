
typedef struct
{  
  v2 dXY;
  r32 dZ;
} tile_map_difference; 

typedef struct
{  
  s32 AbsTileX;
  s32 AbsTileY;
  s32 AbsTileZ;

  v2 Offset_;
} tile_map_position; 

typedef struct tile_entity_block tile_entity_block;
struct tile_entity_block
{
  u32 EntityCount;
  u32 LowEntityIndex[16];
  tile_entity_block *Next;
};

typedef struct tile_chunk tile_chunk;
struct tile_chunk
{
  s32 TileChunkX;
  s32 TileChunkY;
  s32 TileChunkZ;
 
  tile_entity_block FirstBlock;
  tile_chunk* NextInHash;
};

typedef struct
{
  s32 TileChunkX;
  s32 TileChunkY;
  s32 TileChunkZ;
  
  s32 RelTileX;
  s32 RelTileY;
} tile_chunk_position; 

typedef struct
{
  r32 TileSideInMeters;

  s32 ChunkShift;
  s32 ChunkMask;
  s32 ChunkDim;  

  tile_chunk TileChunkHash[4096];
} tile_map;
